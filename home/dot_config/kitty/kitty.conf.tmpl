font_family      FiraCode Nerd Font
bold_font        FiraCode Nerd Font
italic_font      FiraCode Nerd Font
bold_italic_font FiraCode Nerd Font

font_family      MesloLGS NF
bold_font        MesloLGS NF
italic_font      MesloLGS NF
bold_italic_font MesloLGS NF

font_size 13
background_opacity 0.95

hide_window_decorations yes
window_border_width 0
draw_minimal_borders yes

{{- if eq .chezmoi.os "darwin" }}
map cmd+s send_text all \x01\x53
map cmd+1 send_text all \x011
map cmd+2 send_text all \x012
map cmd+3 send_text all \x013
map cmd+4 send_text all \x014
map cmd+5 send_text all \x015
map cmd+6 send_text all \x016
map cmd+7 send_text all \x017
map cmd+8 send_text all \x018
map cmd+9 send_text all \x019
map cmd+n send_text all \x01c
map cmd+x send_text all \x01x
map cmd+l send_text all \x01\x0C
{{- else if eq .chezmoi.os "linux" }}
map ctrl+s send_text all \x01\x53
map ctrl+1 send_text all \x011
map ctrl+2 send_text all \x012
map ctrl+3 send_text all \x013
map ctrl+4 send_text all \x014
map ctrl+5 send_text all \x015
map ctrl+6 send_text all \x016
map ctrl+7 send_text all \x017
map ctrl+8 send_text all \x018
map ctrl+9 send_text all \x019
map ctrl+n send_text all \x01c
map ctrl+x send_text all \x01x
map ctrl+l send_text all \x01\x0C
{{- end }}

cursor_trail 3
cursor_trail_decay 0.1 0.4

# BEGIN_KITTY_THEME
# Catppuccin-Macchiato
include current-theme.conf
# END_KITTY_THEME
